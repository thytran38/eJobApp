<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white_grey"
    android:padding="5dp">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nstScroll"
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/accPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="14dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="#f1f1f1"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/ic_baseline_alternate_email_24"
                            app:tint="@color/navy_100"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Đăng ký tài khoản công ty"
                            android:textColor="@color/navy_100"
                            android:textStyle="bold"
                            android:layout_marginStart="5dp"/>

                        <ImageView
                            android:id="@+id/emailCheck"
                            android:layout_marginEnd="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_baseline_check_24"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iconWebsite"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/ic_baseline_facebook_24"
                            app:tint="@color/text_gray"/>

                        <TextView
                            android:layout_toEndOf="@id/iconWebsite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="Email "
                            android:textIsSelectable="true"/>


                    </RelativeLayout>

                    <EditText
                        android:id="@+id/etUsrEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="User Email"
                        android:textColorHint="@color/light_gray"
                        android:textSize="12sp"
                        android:textColor="@color/grey_effective"/>

                    <RelativeLayout
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iconPass"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_marginTop="2dp"
                            android:src="@drawable/ic_baseline_password_24"
                            app:tint="@color/text_gray"/>

                        <TextView
                            android:layout_toEndOf="@id/iconPass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:text="@string/pwd"
                            android:textIsSelectable="true"/>

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Password"
                        android:textColorHint="@color/light_gray"
                        android:textSize="12sp"
                        android:inputType="textPassword"
                        android:textColor="@color/grey_effective"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_marginTop="14dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="#f1f1f1"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="16sp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:src="@drawable/ic_baseline_person_24"
                            app:tint="@color/navy_100"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="Thông tin công ty"
                            android:textColor="@color/navy_100"
                            android:textStyle="bold"
                            android:layout_marginStart="5dp"/>

                        <ImageView
                            android:id="@+id/personalCheck"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="5dp"
                            android:layout_marginEnd="5dp"

                            android:src="@drawable/ic_baseline_check_24" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/fullname"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:src="@drawable/ic_baseline_person_outline_24"
                                app:tint="@color/text_gray"/>

                            <TextView
                                android:layout_toEndOf="@id/fullname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Tên công ty"/>

                        </RelativeLayout>

                        <EditText
                            android:id="@+id/etUsrFullname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Asian Commercial Bank etc.."
                            android:textColorHint="@color/light_gray"
                            android:textSize="12sp"
                            android:textColor="@color/grey_effective"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/dob"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:src="@drawable/ic_baseline_date_range_24"
                                app:tint="@color/text_gray"/>

                            <TextView
                                android:layout_toEndOf="@id/dob"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Năm thành lập"/>

                        </RelativeLayout>

                        <EditText
                            android:id="@+id/etDateofBirth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="1990"
                            android:clickable="true"
                            android:inputType="date"
                            android:textColorHint="@color/light_gray"
                            android:textSize="12sp"
                            android:textColor="@color/grey_effective"/>



                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iconCompany"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:src="@drawable/ic_baseline_work_outline_24"
                                app:tint="@color/text_gray"/>

                            <TextView
                                android:layout_toEndOf="@id/iconCompany"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Lĩnh vực hoạt động"/>

                        </RelativeLayout>

                        <EditText
                            android:id="@+id/etSchool"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="IT, Sales, Engineering.."
                            android:textColorHint="@color/light_gray"
                            android:textSize="12sp"
                            android:textColor="@color/grey_effective"/>

                        <RelativeLayout
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iconPhone"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/common_full_open_on_phone"
                                app:tint="@color/text_gray"/>

                            <TextView
                                android:layout_toEndOf="@id/iconPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Điện thoại"/>

                        </RelativeLayout>

                        <EditText
                            android:id="@+id/etPersonalPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Điện thoại liên lạc"
                            android:textColorHint="@color/light_gray"
                            android:textSize="12sp"
                            android:textColor="@color/grey_effective"/>

                        <RelativeLayout
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/iconLocation"
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/ic_baseline_location_on_24"
                                app:tint="@color/text_gray"/>

                            <TextView
                                android:layout_toEndOf="@id/iconLocation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:text="Địa chỉ "/>

                        </RelativeLayout>

                        <EditText
                            android:id="@+id/etPersonalAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nhập địa chỉ"
                            android:textColorHint="@color/light_gray"
                            android:textSize="12sp"
                            android:textColor="@color/grey_effective"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:gravity="center_horizontal"
                    android:id="@+id/btRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    android:background="@drawable/button_bg"
                    android:text="Tạo tài khoản" />

            </LinearLayout>
        </LinearLayout>




