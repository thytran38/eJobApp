<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bg_login"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="40dp">

            <ImageView
                android:id="@+id/textView10"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="15dp"
                android:layout_marginBottom="50dp"
                android:src="@mipmap/logo_transparent_circle"
                android:text="eJob"
                android:textColor="@color/white"
                android:textSize="21sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:strokeColor="@color/white"
                app:strokeWidth="0.0dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:background="#00ffffff"
                    android:paddingVertical="15dp"
                    android:paddingHorizontal="3dp">


                    <TextView
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên đăng nhập"
                        android:textColor="@color/white" />

                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/textview_bordercolor"
                        android:ems="10"
                        android:textSize="14sp"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="9dp" />

                    <TextView
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="7dp"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="Mật khẩu"
                        android:textColor="@color/white" />


                    <EditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_marginStart="7dp"
                        android:layout_marginEnd="7dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/textview_bordercolor"
                        android:ems="10"
                        android:textSize="14sp"
                        android:inputType="textPassword"
                        android:paddingLeft="9dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="14dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/white"
                app:strokeWidth="0.0dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:background="#00ffffff"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    android:layout_gravity="center_vertical"
                    android:padding="15dp">

                    <Button
                        android:id="@+id/btLogin"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="13dp"
                        android:background="@drawable/button_bg"
                        android:text="Đăng nhập"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/btRegis"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_alignTop="@+id/btLogin"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="13dp"
                        android:background="@drawable/button_bg"
                        android:text="Tạo tài khoản"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/btnForget"
                        android:elevation="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/button_bg"
                        android:text="Quên mật khẩu"
                        android:textSize="10dp"
                        android:layout_marginBottom="5dp"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>

</FrameLayout>