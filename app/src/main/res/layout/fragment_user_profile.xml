<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_grey"
    android:orientation="vertical"
    tools:context=".MainActivity">

    android:id="@+id/swipeProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="24dp"
                android:src="@drawable/common_google_signin_btn_icon_dark_normal" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="14dp"
                android:layout_marginBottom="20dp"
                android:paddingBottom="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="2dp"
                app:strokeColor="#f1f1f1"
                app:strokeWidth="0.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingTop="7dp"
                        android:paddingBottom="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16sp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="21dp"
                                    android:layout_height="21dp"
                                    android:src="@drawable/ic_baseline_person_24"
                                    app:tint="@color/navy_100" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:text="Thông tin cá nhân"
                                    android:textColor="@color/navy_100"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="3dp">

                                    <ImageView
                                        android:id="@+id/iconEmailUP"
                                        android:layout_width="17dp"
                                        android:layout_height="17dp"
                                        android:layout_marginTop="2dp"
                                        android:src="@drawable/ic_baseline_facebook_24"
                                        app:tint="@color/text_gray" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@id/iconEmailUP"
                                        android:text="Email ứng viên "
                                        android:textIsSelectable="true" />
                                </RelativeLayout>

                                <EditText
                                    android:id="@+id/etEmailUP1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:hint="email người dùng.."
                                    android:textColor="@color/navy_100"
                                    android:textColorHint="@color/light_gray"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">

                                    <ImageView
                                        android:id="@+id/fullnameUP"
                                        android:layout_width="17dp"
                                        android:layout_height="17dp"
                                        android:src="@drawable/ic_baseline_person_outline_24"
                                        app:tint="@color/text_gray" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@id/fullnameUP"
                                        android:text="Họ và tên" />

                                </RelativeLayout>

                                <EditText
                                    android:id="@+id/etFullnameUP1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:hint="Nhập họ và tên"
                                    android:textColor="@color/navy_100"
                                    android:textColorHint="@color/light_gray"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">

                                    <ImageView
                                        android:id="@+id/dobUP"
                                        android:layout_width="17dp"
                                        android:layout_height="17dp"
                                        android:src="@drawable/ic_baseline_date_range_24"
                                        app:tint="@color/text_gray" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@id/dobUP"
                                        android:text="Ngày tháng năm sinh" />

                                </RelativeLayout>

                                <EditText
                                    android:id="@+id/etDateofBirthUP1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:clickable="false"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    android:hint="Ngày tháng năm sinh"
                                    android:inputType="date"
                                    android:textColor="@color/navy_100"
                                    android:textColorHint="@color/light_gray"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">

                                    <ImageView
                                        android:id="@+id/iconCompanyUP"
                                        android:layout_width="17dp"
                                        android:layout_height="17dp"
                                        android:src="@drawable/ic_baseline_school_24"
                                        app:tint="@color/text_gray" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@id/iconCompanyUP"
                                        android:text="Trường Đại học/ Cao đẳng" />

                                </RelativeLayout>

                                <EditText
                                    android:id="@+id/etSchoolUP1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:hint="Trường ĐH Văn Lang, ĐH BK, ĐH KHTN.."
                                    android:textColor="@color/navy_100"
                                    android:textColorHint="@color/light_gray"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">

                                    <ImageView
                                        android:id="@+id/iconPhoneUP"
                                        android:layout_width="17dp"
                                        android:layout_height="17dp"
                                        android:layout_marginTop="2dp"
                                        android:src="@drawable/common_full_open_on_phone"
                                        app:tint="@color/text_gray" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@id/iconPhoneUP"
                                        android:text="Số điện thoại cá nhân" />

                                </RelativeLayout>

                                <EditText
                                    android:id="@+id/etPersonalPhoneUP1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:hint="Nhập số điện thoại cá nhân"
                                    android:textColor="@color/navy_100"
                                    android:textColorHint="@color/light_gray"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">

                                    <ImageView
                                        android:id="@+id/iconLocationUP"
                                        android:layout_width="17dp"
                                        android:layout_height="17dp"
                                        android:layout_marginTop="2dp"
                                        android:src="@drawable/ic_baseline_location_on_24"
                                        app:tint="@color/text_gray" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@id/iconLocationUP"
                                        android:text="Địa chỉ nhà riêng" />

                                </RelativeLayout>

                                <EditText
                                    android:id="@+id/etPersonalAddressUP1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:hint="Nhập địa chỉ"
                                    android:textColor="@color/navy_100"
                                    android:textColorHint="@color/light_gray"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp">

                                    <ImageView
                                        android:id="@+id/iconNgaydangkyUSer"
                                        android:layout_width="17dp"
                                        android:layout_height="17dp"
                                        android:layout_marginTop="2dp"
                                        android:src="@drawable/ic_baseline_calendar_today_24"
                                        app:tint="@color/text_gray" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="5dp"
                                        android:layout_toEndOf="@id/iconNgaydangkyUSer"
                                        android:text="Ngày đăng ký tài khoản" />

                                </RelativeLayout>

                                <EditText
                                    android:id="@+id/etNgaydangkyUser"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:hint="31/10/2020"
                                    android:textColor="@color/navy_100"
                                    android:textColorHint="@color/light_gray"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="14dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginEnd="14dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/white"
                            app:strokeWidth="0.5dp">

                            <ImageView
                                android:id="@+id/changePdf"
                                android:clickable="true"
                                android:layout_gravity="right"
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                app:tint="@color/navy_100"
                                android:src="@drawable/ic_baseline_library_add_24"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="0sp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="16dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="21dp"
                                        android:layout_height="21dp"
                                        android:src="@drawable/ic_baseline_insert_drive_file_24"
                                        app:tint="@color/navy_100" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="5dp"
                                        android:text="CV ứng viên"
                                        android:textColor="@color/navy_100"
                                        android:textStyle="bold" />


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvFileTitle"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_toEndOf="@+id/fileTitle"
                                        android:text="Tên file CV"
                                        android:textIsSelectable="true" />

                                    <ImageView
                                        android:id="@+id/fileTitle"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:layout_alignParentLeft="true"
                                        android:clickable="true"
                                        android:src="@drawable/ic_baseline_picture_as_pdf_grey_24"

                                        android:visibility="visible" />
                                </RelativeLayout>

                                <EditText
                                    android:id="@+id/etTenfileCV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:hint="CV_NguyenVanA.pdf"
                                    android:textColor="@color/navy_100"
                                    android:textColorHint="@color/light_gray"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/cvUpload"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_alignParentLeft="true"
                                        android:clickable="true"

                                        android:src="@drawable/ic_baseline_link_24" />

                                    <TextView
                                        android:id="@+id/pdfLinks"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_toEndOf="@+id/cvUpload"
                                        android:text="Đường dẫn URL"
                                        android:textIsSelectable="true" />

                                </RelativeLayout>

                                <EditText
                                    android:id="@+id/etDuongDanCV"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:hint="https://firebase.google.com/cvfiles/abcxyz.pdf..."
                                    android:textColor="@color/navy_100"
                                    android:textColorHint="@color/light_gray"
                                    android:textSize="12sp"
                                    android:textStyle="bold" />


                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" />


                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <Button
                            android:id="@+id/btnUpdate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/btn_round_green_selector"
                            android:text="Update profile"
                            android:textAllCaps="false" />

                    </LinearLayout>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
