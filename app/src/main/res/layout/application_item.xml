<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="5dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="0dp"
    app:strokeColor="@color/teal_200"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="2dp">

        <LinearLayout
            android:id="@+id/topPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="3dp"
            android:orientation="vertical"
            android:padding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/photoPreviewLayout"
                    android:layout_width="65dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:src="@mipmap/ic_launcher_round"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#f1f1f1"
                    app:strokeWidth="0.5dp">

                    <ImageView
                        android:id="@+id/photoPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="5dp"
                        android:scaleType="centerInside"
                        tools:ignore="UnusedAttribute" />

                    <com.facebook.shimmer.ShimmerFrameLayout
                        android:id="@+id/progress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <View
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_gravity="center"
                            android:background="@mipmap/ic_launcher_round"
                            android:gravity="center" />
                    </com.facebook.shimmer.ShimmerFrameLayout>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginVertical="13sp"
                    android:layout_toEndOf="@id/photoPreviewLayout"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/apName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/applicantName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginBottom="3dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="Nguyen Thi B"
                            android:textColor="@color/grey_effective"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:id="@+id/lampIcon"
                            android:layout_width="15dp"
                            android:layout_height="16sp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_baseline_school_24"
                            app:tint="@color/text_gray" />

                        <TextView
                            android:id="@+id/lamp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/lampIcon"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Van Lang university"
                            android:textColor="@color/text_gray"
                            android:textSize="11sp" />


                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:id="@+id/locIcon3"
                            android:layout_width="15dp"
                            android:layout_height="16sp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/common_full_open_on_phone"
                            app:tint="@color/text_gray" />

                        <TextView
                            android:id="@+id/apPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/locIcon3"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Mobile phone"
                            android:textColor="@color/text_gray"
                            android:textSize="11sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginTop="4dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:id="@+id/locIcon"
                            android:layout_width="15dp"
                            android:layout_height="16sp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_baseline_location_on_24"
                            app:tint="@color/text_gray" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/locIcon"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Address"
                            android:textColor="@color/text_gray"
                            android:textSize="11sp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_marginTop="4dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:id="@+id/locIcon1"
                            android:layout_width="15dp"
                            android:layout_height="16sp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_baseline_alternate_email_24"
                            app:tint="@color/text_gray" />

                        <TextView
                            android:id="@+id/apEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/locIcon1"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Email"
                            android:textColor="@color/text_gray"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="4dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:id="@+id/locIcon2"
                            android:layout_width="15dp"
                            android:layout_height="16sp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_baseline_facebook_24"
                            app:tint="@color/text_gray" />

                        <TextView
                            android:id="@+id/apSocial"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/locIcon2"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Social media"
                            android:textColor="@color/text_gray"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="4dp"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:id="@+id/locIcon5"
                            android:layout_width="15dp"
                            android:layout_height="16sp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_baseline_portrait_24"
                            app:tint="@color/text_gray" />

                        <TextView
                            android:id="@+id/apSelfdescription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/locIcon5"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Self description"
                            android:textColor="@color/text_gray"
                            android:textSize="11sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp">

                        <ImageView
                            android:id="@+id/locIcon4"
                            android:layout_width="15dp"
                            android:layout_height="16sp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/ic_baseline_picture_as_pdf_24"
                            app:tint="@color/text_gray" />

                        <TextView
                            android:id="@+id/cvView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:layout_toEndOf="@id/locIcon4"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Click to view CV"
                            android:textColor="@color/text_gray"
                            android:textSize="11sp" />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="4dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnChooseProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_green"
                android:text="Approve"
                android:textAllCaps="false"
                android:textSize="13sp" />


        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>