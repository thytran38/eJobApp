<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/gradient_bg">

        android:id="@+id/swipeProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/photoPreviewLayout"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="6dp"
                    android:src="@mipmap/ic_launcher_round"
                    app:strokeWidth="0.5dp"
                    app:strokeColor="@color/tealPastel"
                    android:layout_marginVertical="21dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="5dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="8dp">
                    <ImageView
                        android:id="@+id/employerAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:layout_margin="5dp"
                        android:src="@mipmap/logo_1"
                        android:scaleY="1.2"
                        android:scaleX="1.2"
                        android:layout_gravity="center_vertical"
                        tools:ignore="UnusedAttribute" />

                    <!--                    <com.facebook.shimmer.ShimmerFrameLayout-->
                    <!--                        android:id="@+id/progress"-->
                    <!--                        android:layout_width="60dp"-->
                    <!--                        android:layout_height="60dp"-->
                    <!--                        android:orientation="vertical">-->

                    <!--                        <View-->
                    <!--                            android:layout_width="60dp"-->
                    <!--                            android:layout_height="60dp"-->
                    <!--                            android:layout_gravity="center"-->
                    <!--                            android:background="@color/text_gray"-->
                    <!--                            android:gravity="center" />-->
                    <!--                    </com.facebook.shimmer.ShimmerFrameLayout>-->

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardUP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="5dp"
                app:strokeWidth="0.5dp"
                 android:paddingBottom="20dp"
                 android:layout_marginBottom="20dp"
                app:strokeColor="#f1f1f1"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingTop="7dp"
                            android:paddingBottom="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="16sp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="16dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="21dp"
                                        android:layout_height="21dp"
                                        android:src="@drawable/ic_twotone_work_24"
                                        app:tint="@color/navy_100"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="Thông tin doanh nghiệp"
                                        android:textColor="@color/navy_100"
                                        android:textStyle="bold"
                                        android:layout_marginStart="5dp"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <RelativeLayout
                                        android:layout_marginTop="3dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/iconEmailUP"
                                            android:layout_width="17dp"
                                            android:layout_height="17dp"
                                            android:layout_marginTop="2dp"
                                            android:src="@drawable/ic_baseline_facebook_24"
                                            app:tint="@color/text_gray"/>

                                        <TextView
                                            android:layout_toEndOf="@id/iconEmailUP"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:text="Email "
                                            android:textIsSelectable="true"/>
                                    </RelativeLayout>

                                    <EditText
                                        android:id="@+id/etEmailUP1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="hrdept@acb.com.vn"
                                        android:textColorHint="@color/light_gray"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/navy_100"
                                        android:layout_marginTop="2dp"/>

                                    <RelativeLayout
                                        android:layout_marginTop="3dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/iconWebsite3"
                                            android:layout_width="17dp"
                                            android:layout_height="17dp"
                                            android:layout_marginTop="2dp"
                                            android:src="@drawable/ic_baseline_link_24"
                                            app:tint="@color/text_gray"/>

                                        <TextView
                                            android:layout_toEndOf="@id/iconWebsite3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:text="Website công ty "
                                            android:textIsSelectable="true"/>
                                    </RelativeLayout>

                                    <EditText
                                        android:id="@+id/etWebcongty"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="www.acb.com.vn"
                                        android:textColorHint="@color/light_gray"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/navy_100"
                                        android:layout_marginTop="2dp"/>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp">

                                        <ImageView
                                            android:id="@+id/fullnameUP"
                                            android:layout_width="17dp"
                                            android:layout_height="17dp"
                                            android:src="@drawable/ic_baseline_work_outline_24"
                                            app:tint="@color/text_gray"/>

                                        <TextView
                                            android:layout_toEndOf="@id/fullnameUP"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:text="Tên công ty"/>

                                    </RelativeLayout>

                                    <EditText
                                        android:id="@+id/etFullnameUP1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="ACB"
                                        android:textColorHint="@color/light_gray"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/navy_100"
                                        android:layout_marginTop="2dp"/>

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp">

                                        <ImageView
                                            android:id="@+id/dob"
                                            android:layout_width="17dp"
                                            android:layout_height="17dp"
                                            android:src="@drawable/ic_baseline_date_range_24"
                                            app:tint="@color/text_gray"/>

                                        <TextView
                                            android:layout_toEndOf="@id/dob"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:text="Năm thành lập"/>

                                    </RelativeLayout>

                                    <EditText
                                        android:id="@+id/etYOF"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="1990"
                                        android:clickable="true"
                                        android:inputType="date"
                                        android:textColorHint="@color/light_gray"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/navy_100" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp">

                                        <ImageView
                                            android:id="@+id/qm"
                                            android:layout_width="17dp"
                                            android:layout_height="17dp"
                                            android:src="@drawable/ic_baseline_supervisor_account_24"
                                            app:tint="@color/text_gray"/>

                                        <TextView
                                            android:layout_toEndOf="@id/qm"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:text="Quy mô công ty"/>

                                    </RelativeLayout>

                                    <EditText
                                        android:id="@+id/etQuymo1"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="1990"
                                        android:clickable="true"
                                        android:inputType="date"
                                        android:textStyle="bold"
                                        android:textColor="@color/navy_100"
                                        android:textColorHint="@color/light_gray"
                                        android:textSize="12sp"/>


                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp">

                                        <ImageView
                                            android:id="@+id/iconCompanyUP"
                                            android:layout_width="17dp"
                                            android:layout_height="17dp"
                                            android:src="@drawable/ic_baseline_maps_home_work_24"
                                            app:tint="@color/text_gray"/>

                                        <TextView
                                            android:layout_toEndOf="@id/iconCompanyUP"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:text="Lĩnh vực hoạt động"/>

                                    </RelativeLayout>



                                    <EditText
                                        android:id="@+id/etIndustry"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Ngân hàng, IT, công nghệ, kinh doanh.."
                                        android:textColorHint="@color/light_gray"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/navy_100"
                                        android:layout_marginTop="2dp"/>



                                    <RelativeLayout
                                        android:layout_marginTop="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/iconPhoneUP"
                                            android:layout_width="17dp"
                                            android:layout_height="17dp"
                                            android:layout_marginTop="2dp"
                                            android:src="@drawable/common_full_open_on_phone"
                                            app:tint="@color/text_gray"/>

                                        <TextView
                                            android:layout_toEndOf="@id/iconPhoneUP"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:text="Điện thoại công ty"/>

                                    </RelativeLayout>

                                    <EditText
                                        android:id="@+id/etCompanyPhone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="+849999985"
                                        android:textColorHint="@color/light_gray"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/navy_100"
                                        android:layout_marginTop="2dp"/>

                                    <RelativeLayout
                                        android:layout_marginTop="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/iconLocationUP"
                                            android:layout_width="17dp"
                                            android:layout_height="17dp"
                                            android:layout_marginTop="2dp"
                                            android:src="@drawable/ic_baseline_location_on_24"
                                            app:tint="@color/text_gray"/>

                                        <TextView
                                            android:layout_toEndOf="@id/iconLocationUP"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:text="Địa chỉ công ty"/>

                                    </RelativeLayout>

                                    <EditText
                                        android:id="@+id/etCompanyAddress"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Nhập Địa chỉ công ty"
                                        android:textColorHint="@color/light_gray"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/navy_100"
                                        android:layout_marginTop="2dp"/>


                                    <RelativeLayout
                                        android:layout_marginTop="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/iconDateCreation"
                                            android:layout_width="17dp"
                                            android:layout_height="17dp"
                                            android:layout_marginTop="2dp"
                                            android:src="@drawable/ic_baseline_access_time_24"
                                            app:tint="@color/text_gray"/>

                                        <TextView
                                            android:layout_toEndOf="@id/iconDateCreation"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="5dp"
                                            android:text="Ngày đăng ký"/>

                                    </RelativeLayout>

                                    <EditText
                                        android:id="@+id/etNgaydangkyCty"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:hint="Ngày đăng ký"
                                        android:textColorHint="@color/light_gray"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/navy_100"
                                        android:layout_marginTop="2dp"/>

                                </LinearLayout>



                            </LinearLayout>


                            <Button
                                android:id="@+id/btnUpdate1"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_round_green_selector"
                                android:layout_gravity="center_horizontal"
                                android:elevation="20dp"
                                android:textAllCaps="false"
                                android:text="Cập nhật hồ sơ" />

                        </LinearLayout>


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</LinearLayout>
