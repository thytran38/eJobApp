<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_employer_scene"
    tools:context=".ui.employer.EmployerActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcJoblist"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    tools:layout_editor_absoluteX="0dp"
                    tools:layout_editor_absoluteY="151dp">

                </androidx.recyclerview.widget.RecyclerView>

                <Button
                    android:id="@+id/btnAddjob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add New Job"
                    tools:layout_editor_absoluteX="128dp"
                    tools:layout_editor_absoluteY="603dp" />

                <Button
                    android:id="@+id/btnLogout_employer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    tools:layout_editor_absoluteX="150dp"
                    tools:layout_editor_absoluteY="663dp" />

            </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.motion.widget.MotionLayout>